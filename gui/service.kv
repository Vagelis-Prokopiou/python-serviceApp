#:set counter 0

<RootWidget>:
    orientation: 'vertical'
    spacing: 5
    # Use the following to change background color. See: https://kivy.org/docs/guide/widgets.html
    #canvas.before:
        #Color:
            #rgba: 1, 1, 1, 1
        #Rectangle:
            ## self here refers to the widget i.e BoxLayout
            #pos: self.pos
            #size: self.size

    # The text input region.
    BoxLayout:
        background_color: [1, 0, 0, 1]
        size_hint_y: 0.25
        spacing: 5
        orientation: 'vertical'
        Label:
            text: 'Please, provide the total kms of the vehicle\nand press "Ok"'
            font_size: 24
            height: 70
        BoxLayout:
            spacing: 5
            TextInput:
                id: text_input
                font_size: 20
            Button:
                id: button_ok
                text: 'Ok'
                font_size: 24
                height: 30
                on_release: root.kms_provided(text_input.text, counter+1)


    # The buttons region.
    BoxLayout:
        size_hint_y: 0.25
        spacing: 5
        orientation: 'vertical'
        Button:
            id: button_check
            text: 'Run a check.'
            on_release: root.check()
        BoxLayout:
            spacing: 5
            Button:
                id: button_update
                text: 'Update an existing entry.'
                on_release: root.update()
            Button:
                id: button_insert
                text: 'Insert a new entry.'
                on_release: root.check()
            Button:
                id: button_entries
                text: 'See the available entries.'
                on_release: root.check()

    # The results region.
    BoxLayout:
        size_hint_y: 0.5
        spacing: 5
        orientation: 'vertical'
        Label:
            size_hint_y: 0.3
            text: 'Results'
            font_size: 24
        BoxLayout:
            spacing: 5
            size_hint_y: 0.7
            TextInput:
                id: text_input_results
                font_size: 20
                size_hint_x: 0.8
            Button:
                id: button_done
                text: 'Done'
                size_hint_x: 0.2
                on_release: root.done(text_input_results.text)


