#:set counter 0

<RootWidget>:
    orientation: 'vertical'
    spacing: 5
    # Use the following to change background color. See: https://kivy.org/docs/guide/widgets.html
    #canvas.before:
        #Color:
            #rgba: 1, 1, 1, 1
        #Rectangle:
            ## self here refers to the widget i.e BoxLayout
            #pos: self.pos
            #size: self.size

    # The text input region.
    BoxLayout:
        size_hint_y: 0.2
        background_color: [1, 0, 0, 1]
        spacing: 5
        orientation: 'vertical'
        Label:
            text: 'Please, provide the total kms of the vehicle\nand press "Proceed"'
            font_size: 24
        BoxLayout:
            spacing: 5
            TextInput:
                id: text_input
                font_size: 20
            Button:
                size_hint_x: 0.15
                id: button_ok
                text: 'Proceed'
                font_size: 20
                on_release: root.kms_provided(text_input.text, counter+1)


    BoxLayout:
        size_hint_y: 0.8

        # The results region.
        BoxLayout:
            spacing: 5
            orientation: 'vertical'
            Label:
                size_hint_y: 0.15
                text: 'Results'
                font_size: 24
            BoxLayout:
                spacing: 5
                size_hint_y: 0.85
                TextInput:
                    id: text_input_results
                    font_size: 20
                    size_hint_x: 0.8

        # The right column with all the buttons.
        BoxLayout:
            size_hint_x: 0.15
            spacing: 5
            orientation: 'vertical'
            Button:
                id: button_check
                text: 'Run check.'
                on_release: root.check()
            Button:
                id: button_update
                text: 'Update\nexisting entry.'
                on_release: root.update()
            Button:
                id: button_insert
                text: 'Insert\nnew entry.'
                on_release: root.check()
            Button:
                id: button_entries
                text: 'See\navailable\nentries.'
                on_release: root.check()
            Button:
                id: button_done
                text: 'Done'
                on_release: root.done(text_input_results.text)




